<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="XML.FXMLWelcomeController" 
    xmlns:fx="http://javafx.com/fxml"  alignment="center" hgap="10" vgap="10">
	<padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
	<Text text="Add Missile" id="welcome-text"
		GridPane.columnIndex="0" GridPane.rowIndex="0"
        GridPane.columnSpan="2"/>
    <Label text="Missile Id:"
        GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="MissileId"
        GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Label text="destination:"
        GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="destination"
        GridPane.columnIndex="1" GridPane.rowIndex="2"/>
	<Label text="damage:"
        GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="damage"
        GridPane.columnIndex="1" GridPane.rowIndex="3"/>
  	<HBox spacing="10" alignment="bottom_right" 
       GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button fx:id="add" text="Add" onAction="#addMissile"/>
	</HBox>
	<Text fx:id="answer"
       GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.columnSpan="2"/>
</GridPane>
